<Page x:Class="LogicalFuncs.pages.trainer.PageStartTrainer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogicalFuncs.pages.trainer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStartTrainer">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Canvas Height="20" Width="20">
                <Line x:Name="verticalLineOne" X1="0" X2="0" Y1="0" Y2="20" StrokeThickness="0.5" Stroke="{StaticResource AppBlueColor}"/>
                <Line x:Name="horizontalLineOne" X1="0" X2="20" Y1="20" Y2="20" StrokeThickness="0.5" Stroke="{StaticResource AppBlueColor}"/>

                <Line x:Name="verticalLineTwo"  X1="20" X2="20" Y1="0" Y2="20" StrokeThickness="0.5" Stroke="{StaticResource AppBlueColor}"/>
                <Line x:Name="horizontalLineTwo" X1="20" X2="0" Y1="0" Y2="0" StrokeThickness="0.5" Stroke="{StaticResource AppBlueColor}"/>
            </Canvas>
            <TextBlock Text="Ожидание ввода..."/>
        </StackPanel>
    </Grid>
</Page>
