<Page x:Class="LogicalFuncs.pages.information.PageInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogicalFuncs.pages.information"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageInformation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Image 
            x:Name="imgCurrentImage" 
            RenderOptions.BitmapScalingMode="HighQuality"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />

        <StackPanel 
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <TextBlock 
                x:Name="btnTheory"
                Text="●"
                Foreground="{StaticResource AppBlueColor}"
                FontSize="20"
                Uid="../../images/information/Theory.png"
                MouseDown="Information_Pagination"
                Opacity="0.45"
                />

            <TextBlock 
                x:Name="btnPractice"
                Text="●"
                Foreground="{StaticResource AppBlueColor}"
                FontSize="20"
                Uid="../../images/information/Practice.png"
                MouseDown="Information_Pagination"
                Opacity="0.45"
                />

            <TextBlock 
                x:Name="btnTrainer"
                Text="●"
                Foreground="{StaticResource AppBlueColor}"
                FontSize="20"
                Uid="../../images/information/Trainer.png"
                MouseDown="Information_Pagination"
                Opacity="0.45"
                />

            <TextBlock 
                x:Name="btnErrors"
                Text="●"
                Foreground="{StaticResource AppBlueColor}"
                FontSize="20"
                Uid="../../images/information/Errors.png"
                MouseDown="Information_Pagination"
                Opacity="0.45"
                />

            <TextBlock 
                x:Name="btnCalculator"
                Text="●"
                Foreground="{StaticResource AppBlueColor}"
                FontSize="20"
                Uid="../../images/information/Calculator.png"
                MouseDown="Information_Pagination"
                Opacity="0.45"
                />
        </StackPanel>
    </Grid>
</Page>
